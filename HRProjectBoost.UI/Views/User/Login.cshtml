    <script src="assets/js/main.js"></script>
    <script src="https://kit.fontawesome.com/c15bf86c48.js" crossorigin="anonymous"></script>
    <script src="~/lib/toastrjs/toastr.min.js"></script>
    <link href="~/lib/toastrjs/toastr.css" rel="stylesheet" />
    <link href="~/lib/toastrjs/toastr.min.css" rel="stylesheet" />
    <script src="sweetalert2.all.min.js"></script>
    <script src="sweetalert2.min.js"></script>
    <link rel="stylesheet" href="sweetalert2.min.css">
    <script src="~/sweetalert2/sweetalert2.min.js"></script>
    <link href="~/sweetalert2/sweetalert2.min.css" rel="stylesheet" />


    <!-- Password iconu için gereken JS kuruldu, ilgili script dosyasina tasinabilir -->
    <script>
        const togglePassword = document.querySelector('#togglePassword');
        const passwordInput = document.querySelector('#yourPassword');

        togglePassword.addEventListener('click', function () {
            const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
            passwordInput.setAttribute('type', type);
            this.classList.toggle('fa-eye-slash');
        });
    </script>
